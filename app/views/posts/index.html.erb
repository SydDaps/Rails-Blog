<% content_for :page_title, "index" %>

<section class="section">
  <div class="container">
  <% @posts.each do |post|%>
    <div class="card">
      <div class="card-content">
      <article class="media">
        <div class="media-content">
          <div class="content">
            <p>
            <strong><%=  link_to post.title, post %></strong> <small class="level-right"><%= post.created_at.strftime('%Y-%m-%d %H:%M:%S') %></small>
            <br>
             <%= post.content %>
            </p>
          </div>
        </div>
      </article>
      </div>
    </div>
  <%end%>
  </div>
</section>